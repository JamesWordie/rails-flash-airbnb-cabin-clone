<!-- link/form to update user

loop through my bookings (current/past)??

if owner = true
  loop through cabins.each
  dipslay all cabins where cabin.user = current_user
  show details of cabin, link to update/destroy
  current user info -->

  <span><%= link_to 'Add a New Cabin', new_cabin_path %> </span>
  <div class="container">
    <div class="row">
      <div class="cards">
        <% current_user.cabins.each do |cabin| %>
        <div class="card-profile">
          <img src="https://images.pexels.com/photos/4947737/pexels-photo-4947737.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="">
          <h2><%= cabin.name %> </h2>
          <p><%= cabin.description %> </p>
          <span>
          <%= link_to 'Edit', edit_cabin_path(cabin), class: "btn btn-primary" %>
          <%= link_to 'Delete', cabin_path(cabin), method: :delete, class: "btn btn-primary" %>
          </span>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="cards">
        <% current_user.bookings.each do |booking| %>
        <div class="card-profile">
          <h5>From:<%= booking.start_date %></h5>-<h5>To:<%= booking.end_date %></h5>
          <span>
          <%= link_to 'Edit Booking', edit_booking_path(booking), class: "btn btn-primary" %>
          <%= link_to 'Delete Booking', booking_path(booking), method: :delete, class: "btn btn-primary" %>
          </span>
        </div>

      <% end %>
    </div>
  </div>
</div>
