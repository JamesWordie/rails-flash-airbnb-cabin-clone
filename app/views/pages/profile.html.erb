<!-- link/form to update user

loop through my bookings (current/past)??

if owner = true
  loop through cabins.each
  dipslay all cabins where cabin.user = current_user
  show details of cabin, link to update/destroy
  current user info -->
  <div id="profile-page">
    <div class="container">
      <div class="row justify-content-center">
        <div class="profile-buttons">
        <%= link_to 'Add a New Cabin', new_cabin_path, class: "btn"  %>
        <% if current_user.bookings.empty? %>
        <%= link_to 'Make a booking', cabins_path, class: "btn" %>
        <p id="add-booking-text">Looks like you got no bookings... Lets change that!</p>
        <% end %>
      </div>
    </div>
      <% if !current_user.cabins.empty? %>
      <p class="header">Your Cabins</p>
      <% end %>
      <div class="cards-container">
        <% current_user.cabins.each do |cabin| %>
          <div class="card-profile">
            <img src="https://images.pexels.com/photos/4947737/pexels-photo-4947737.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="">
            <h2><%= cabin.name %> </h2>
            <p><%= cabin.description %> </p>
            <span>
              <%= link_to 'Edit', edit_cabin_path(cabin), class: "btn" %>
              <%= link_to 'Delete', cabin_path(cabin), method: :delete, class: "btn" %>
              <% if !cabin.bookings.empty? %>
                <h2> Bookings </h2>
              <% else %>
                <h2>No current bookings</h2>
              <% end %>
              <% cabin.bookings.each do |booking| %>
              <p><%=  booking.start_date %> - <%=  booking.end_date %></p>
              <div class="booking-status">
                <% if booking.status == "f" %>
                  <p>status: pending</p>
                <% else %>
                  <p>status:accepted </p>
                <%end%>
                <% if booking.status != "t" %>
                <%= simple_form_for [booking] do |f| %>
                <%= f.input :status, as: :boolean, selected: false, label: "accept" %>


                <%= f.submit "Accept booking", class: "btn btn-primary" %>

                <% end %>
                <% end %>
                <%= link_to 'Delete Booking', booking_path(booking), method: :delete, class: "btn" %>
              </div>

              <div class="confirmed-bookings">

              </div>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
      <% if !current_user.bookings.empty? %>
      <p class="header">Your bookings</p>
      <% end %>
      <div class="row">
        <div class="cards">
          <% current_user.bookings.each do |booking| %>
          <div class="card-profile">
            <h5>From:<%= booking.start_date %></h5>-<h5>To:<%= booking.end_date %></h5>
            <span>

              <%= link_to 'Edit Booking', edit_booking_path(booking), class: "btn" %>
              <%= link_to 'Delete Booking', booking_path(booking), method: :delete, class: "btn" %>
            </span>
          </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
