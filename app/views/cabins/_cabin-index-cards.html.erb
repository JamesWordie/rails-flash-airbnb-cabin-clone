<% @cabins.each do |cabin| %>
  <div class="card-cabin-index" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url( <%= cl_image_path cabin.photo.key %> );">
    <h4><%= link_to cabin.name, cabin_path(cabin) %></h4>
    <br>
    <br>
    <div class="text-left">
      <i class="fas fa-users" style="color:white"> <%= cabin.number_of_guests %></i>
     <i class="fas fa-pound-sign" style="color:white"> <%= cabin.price_per_night %></i>
    </div>
    <p style="color:white"><%= cabin.location %></p>
  </div>
<% end %>
