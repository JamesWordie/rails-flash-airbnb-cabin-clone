<div class="container" >
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@cabin) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.input :location %>
        <%= f.input :photo, as: :file %>
        <div class=“form-actions btn btn-primary”>
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>



